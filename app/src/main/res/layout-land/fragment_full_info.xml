<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="com.test.weather.ui.FullInfoFragment"
    android:background="@color/block_background"
    android:orientation="horizontal"
    android:padding="2dp"
    android:gravity="center">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="@dimen/smallest_ic_width"
                android:layout_height="@dimen/smallest_ic_height"
                android:id="@+id/imageView9"
                android:src="@mipmap/hot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="18\u00B0"
                android:id="@+id/tvMaxTemp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/small2" />

            <ImageView
                android:layout_width="@dimen/smallest_ic_width"
                android:layout_height="@dimen/smallest_ic_height"
                android:id="@+id/imageView10"
                android:src="@mipmap/barometer"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1015 hPa"
                android:id="@+id/tvPressure"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:textSize="@dimen/small2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="@dimen/smallest_ic_width"
                android:layout_height="@dimen/smallest_ic_height"
                android:id="@+id/imageView111"
                android:src="@mipmap/cool" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="-18\u00B0"
                android:id="@+id/tvMinTemp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="@dimen/small2" />

            <ImageView
                android:layout_width="@dimen/smallest_ic_width"
                android:layout_height="@dimen/smallest_ic_height"
                android:id="@+id/imageView121"
                android:src="@mipmap/humidity"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="99%"
                android:id="@+id/tvHumidity"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:textSize="@dimen/small2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageWindDirection"
            android:src="@android:drawable/ic_menu_send" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="999 mph"
            android:id="@+id/tvWindForce"
            android:textSize="@dimen/small2" />
    </LinearLayout>

</LinearLayout>
